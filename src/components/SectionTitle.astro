---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<div>
  <h2>
    {text}
  </h2>
</div>

<style>
  div {
    display: inline-block;
    padding: 0.375rem 0.75rem;
    background-color: #000000;
  }

  h2 {
    font-family: handwriting, cursive;
    font-size: 1.125rem;
    line-height: 1.75rem;
    color: #ffffff;

    @media (min-width: 768px) {
      font-size: 1.5rem;
      line-height: 2rem;
    }
  }
</style>
