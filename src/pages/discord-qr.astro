---
import discord from "../assets/images/discord-qr.svg";
import instagram from "../assets/images/ig-qr.svg";
import Layout from "../layouts/Layout.astro";
---

<Layout title="QR code - Atelier">
  <main>
    <div class="content">
      <h2>Discord</h2>

      <img src={discord.src} alt="Discord QR code" />

      <h2>Instagram</h2>

      <img src={instagram.src} alt="Instagram QR code" />
    </div>
  </main>

  <script>
    let screenLock: WakeLockSentinel | undefined;
    let retryInterval: ReturnType<typeof setInterval>;

    (async () => {
      try {
        retryInterval = setInterval(async () => {
          if (screenLock && !screenLock.released) {
            return;
          }
          if (document.hidden) {
            return;
          }
          try {
            screenLock = await navigator.wakeLock.request("screen");
          } catch (error) {}
        }, 10_000); // every 10s
      } catch (error) {}
    })();
  </script>
</Layout>

<style lang="scss">
  body {
    background-image: url("../assets/images/paper.webp");
    background-position: center;
    background-size: cover;
  }

  h2 {
    font-size: 3rem;
    margin-top: 2rem;
  }

  main {
    width: 100%;
    height: 100vh;
    display: grid;
    place-items: center;

    text-align: center;
    letter-spacing: -0.04em;

    .content {
      padding: 5rem;

      display: grid;
      gap: 2rem;
      place-items: center;

      img {
        width: min(400px, calc(100vw - 2rem));
        height: auto;
      }
    }
  }
</style>
